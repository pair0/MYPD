
    <div class="mypage_title" style="border-bottom: 3px solid #2f17c8; margin-bottom: 20px;">
        <div class="reg_svc_list_title" style="font-size: 15; color: #2f17c8; padding: 30px 0 1px;">
            연동 서버 정보
        </div>
    </div>
    <form method="post" action="/mypage/isc_approve" style="margin: 20px auto; width: 100%;">
        <div class="table_box_detail">
            <table class="data_table_detail">
                <tr>
                <th>서버명</th>
                <td>
                    <div style="display: flex;">
                        <p6 style="width: 100%;"><%=raw.server_name%></p6>
                        <input name="serverI" style="display: none;" value=<%=raw.server_manage_id%>>
                    </div>
                </td>
                </tr>
                <tr>
                <th>API 업권</th>
                <td name="serverB"><%=raw.business_right%></td>
                </tr>
                <tr>
                <th>서버 설명</th>
                <td name="serverT"><%=raw.server_explain%></td>
                </tr>
            </table>
            <div style="border-bottom: 1px solid #444444; width: 85%; align-items: center; padding: 20px 0; min-width: 0;">
                <div style="display:flex; width:55%; margin: 20px auto; justify-content: space-between;">
                    <p1 style="font-weight: 700;">요청 서비스*</p1>
                    <select class="select_server" style="width:60%; border-color: rgba(154, 150, 150, 0.2);" name="serviceI"required="">
                        <option>서비스 선택</option>
                        <% for(var i=0; i<row.length; i++){ %>
                            <option value=<%=row[i].service_id%>><%=row[i].service_name%></option>
                        <% } %>
                    </select>
                </div>
                <div style="display:flex; width:55%; margin: 20px auto; justify-content: space-between;">
                    <p1 style="font-weight: 700;">요청 내용*</p1>
                    <textarea name="serviceT" style="width:60%; height:150px; resize: none;"></textarea>
                </div>
            </div>
        </div>
        <div style="display: flex; margin: 20px auto; width: 272px;">
            <button type="submit" class="selectadd_button" style="cursor: pointer; margin-right:20px; background: #0C61FE; border: none; color: #fff; font-size: 14px; padding: 5px 50px;" onclick="check()">저장</button>
            <button type="button" onclick="location.reload();" class="selectadd_button" style="cursor: pointer; background: #a5a7ab; border: none; color: #fff; font-size: 14px; padding: 5px 50px;" onclick="check()">취소</button>
        </div>
    </form>
